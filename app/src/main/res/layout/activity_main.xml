<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ratingInput"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:ems="10"
        android:inputType="text"
        android:text="Rating:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="456dp" />

    <EditText
        android:id="@+id/commentInput"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:ems="10"
        android:inputType="text"
        android:text="Comment:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="516dp" />

    <EditText
        android:id="@+id/artistsInput"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="text"
        android:text="Name of Artist:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/songInput"
        android:layout_width="358dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="text"
        android:text="Name of song:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:text="Playlist Manager"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:text="View Playlist"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="588dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:background="@color/black"
        android:text="Exit"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="660dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:background="@color/material_dynamic_secondary0"
        android:text="Add To Playlist"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="588dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="282dp"
        android:layout_height="172dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>